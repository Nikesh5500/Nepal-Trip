@page
@model Nepal_Trip.Pages.TripList.EditModel


<br />
<h2 class="text-info">Edit Trip</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Trip.ID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <lable asp-for="Trip.Name">Name</lable>
            </div>
            <div class="col-6">
                <input asp-for="Trip.Name" class="form-control" />
            </div>
            <span asp-validation-for="Trip.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <lable asp-for="Trip.CountryName">Country Name</lable>
            </div>
            <div class="col-6">
                <input asp-for="Trip.CountryName" class="form-control" />
            </div>
            <span asp-validation-for="Trip.CountryName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <lable asp-for="Trip.StartDate">Start Date</lable>
            </div>
            <div class="col-6">
                <input asp-for="Trip.StartDate" class="form-control" />
            </div>
            <span asp-validation-for="Trip.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <lable asp-for="Trip.EndDate">End Date</lable>
            </div>
            <div class="col-6">
                <input asp-for="Trip.EndDate" class="form-control" />
            </div>
            <span asp-validation-for="Trip.EndDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <lable asp-for="Trip.Description">Description</lable>
            </div>
            <div class="col-6">
                <input asp-for="Trip.Description" class="form-control" />
            </div>
            <span asp-validation-for="Trip.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-check control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
